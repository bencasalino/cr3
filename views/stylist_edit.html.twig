<html>
    <head>
        <title>Update Stylist</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>

            <h1>Edit Stylist {{ stylist.getName }}</h1>

            <form action="/stylist/{{ stylist.getId }}" method="post" class="form-inline">
                <div class="form-group">
                    <input name="_method" type="hidden" value="patch">

                    <label for='name'> Edit the stylist name here:</label>
                    <input id='name' name='name' class='form-control' type='text'>
                </div>

                <button type='submit' class="btn btn-default">Update</button>
            </form>

            <form action="/stylist/{{ stylist.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit" class="btn btn-danger">Delete all of the  stylist</button>
            </form>

        </div>
    </body>
</html>
