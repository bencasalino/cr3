<html>
    <head>
        <title>Update  a  Client</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class="container">
            <h3>Update Client {{ client.getName }}</h3>

            <form action="/client/{{ client.getId }}" method="post" class="form-inline">
                <div class="form-group">
                    <input name="_method" type="hidden" value="patch">

                    <label for='name'>Update the current  client name:</label>
                    <input id='name' name='name' class='form-control' type='text'>
                </div>

                <button type='submit' class= "btn btn-default">Update</button>
            </form>

            <form action="/client/{{ client.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit" class="btn btn-danger">Delete all of your client</button>
            </form>
        </div>

    </body>
</html>
