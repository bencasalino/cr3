<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>

        <title>Code Review Week 3</title>
    </head>
    <body>

        <div class="container">
            <!-- <div class="row">

                <div class= "col-md-6"> -->
            <h1>Welcome!</h1>

            <p>Create a new Client:</p>

            <form action="/clients" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name" name="name" type="text" required>

                </div>
                <hr>


                <button type="submit" class="btn btn-success">Add client</button>
            </form>

            {% if clients is not empty %}
                    <p>Here are all your clients:</p>
                    <ul>
                        {% for client in clients %}
                            <li><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></li>
                        {% endfor %}
                    </ul>
            {% else %}
                <p>There are no clients yet!</p>
            {% endif %}

            <form action="/" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete everything. </button>
            </form>
        </div>
    <!-- </div>
</div> -->

    </body>
</html>
