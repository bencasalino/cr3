<html>
    <head>
        <title>Stylist List</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container-fluid'>
            <h1>Ben's Salon</h1>
            <p>Add a Stylist:</p>
            <form action='/stylists' method='post'>
                <div class='form-group'>
                    <label for='name'>Stylist name:</label>
                    <input id='name' name='name' type='text'>
                </div>
                <button type="submit" class="btn btn-primary">Add  a new Stylist!</button>
            </form>
            {% if stylists is not empty %}
                <p>Here are all the stylists available:</p>
                <ul>
                    {% for stylist in stylists %}
                    <li><a href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>There are no stylists...yet!</p>
            {% endif %}

            <form action='/delete_stylists' method='post'>
                <div class="form-group">
                    <button type='submit' class='btn btn-info'>Delete all of the stylists</button>
                </div>
            </form>
        </div>
    </body>
</html>
