<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <title>Edit some of the clients info!</title>
    </head>
    <body>
        <div class="container">
            <!--  use twig to insert name! -->
            <h1>Update   {{ clients.getName }}'s information! </h1>

            <form action="/clients/{{ clients.getId }}" method="post">

                <input name="_method" type="hidden" value="patch">
                <input id='stylist_id' name='stylist_id' type='hidden' value='{{ clients.getStylistId() }}'>
                <div class="form-group">
                    <label for="name">Update the name:</label>
                    <input id="name" name="name" type="text">
                </div>
                <div class="form-group">
                    <label for"phone">Update the phone number:</label>
                    <input id="phone" name="phone" type="text">
                </div>
                <div class="form-group">
                    <label for="style_choice">Update client style prefs:</label>
                    <input id="style_choice" name="style_choice" type="text">
                </div>
              <button type="submit" class="btn btn-success">Update!!!!</button>
            </form>

            <form action="/clients/{{ clients.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">
                <input id='stylist_id' name='stylist_id' type='hidden' value='{{ clients.getStylistId() }}'>
                <button type="submit" class="btn btn-danger">Delete this particular client!</button>
            </form>
        </div>
    </body>
</html>
