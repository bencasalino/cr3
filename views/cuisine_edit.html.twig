<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'>
        <link rel='stylesheet' href='/styles/styles.css' />
        <title>Edit cuisine</title>
    </head>
    <body>
        <h1>Update the {{ cuisine.getName }} cuisine </h1>

        <form action="/cuisines/{{ cuisine.getId }}" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="price">Increase the price of your cuisine:</label>
            0$ <input id="price" name="price" type="range" min="0" max="5" step="1"> $5
            <button type="submit">Update price</button>
        </form>

        <form action="/cuisines/{{ cuisine.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">

            <button type="submit">Delete this cuisine</button>
        </form>
    </body>
</html>
